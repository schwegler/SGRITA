<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th>Gps</th>
    <th>Kind</th>
    <th>City</th>
    <th>County</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.number %></td>
    <td><%= site.gps %></td>
    <td><%= site.kind %></td>
    <td><%= site.city %></td>
    <td><%= site.county %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

